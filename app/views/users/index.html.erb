<% provide(:title, 'Home')%>
<%= form_for @user do |form|%>

<% if @user.errors.any? %>
  <div id="errors">
    <h2><%= pluralize(@user.errors.count, "error")%></h2>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </div>
<% end %>
  <%= form.email_field :email, :placeholder => "Email" %>
  <%= form.password_field :password, :placeholder => "Password" %>

  <%= form.button :submit %>
<% end %>
