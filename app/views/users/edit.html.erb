<% provide(:title, "Edit user")%>
  <h1>Update your P-File!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= render 'form' %>

    <%= image_tag @user.gravatar_url, alt: @user.first_name, class: "gravatar" %>
    <a href="http://gravatar.com/<%= @user.email %>">change</a>

    <%= link_to "Delete", @user, method: :delete, class: "btn btn-large btn-danger"%>
  </div>
</div>
